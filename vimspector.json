{
	"configurations": {
		"foo": {
			"breakpoints": {
				"exception": {
					"all": "N",
					"uncaught": "Y"
				}
			},
			"configuration": {
				"name": "",
				"request": "launch",
				"stopAtEntry": true
			}
		},

		"CodeLLDB Launch": {
			"adapter": "CodeLLDB",
			"breakpoints": {
				"exception": {
					"all": "N",
					"uncaught": "Y"
				}
			},
			"configuration": {
				"name": "(lldb) Launch",
				"type": "cppdbg",
				"request": "launch",
				"program": "${binary}",
				"args": [],
				"stopAtEntry": false,
				"cwd": "${workspaceFolder}",
				"environment": [],
				"MIMode": "lldb",
				"miDebuggerPath": "/usr/bin/lldb"
			}
		},

		"CodeLLDB Attach": {
			"adapter": "CodeLLDB",
			"breakpoints": {
				"exception": {
					"all": "N",
					"uncaught": "Y"
				}
			},
			"configuration": {
				"request": "attach",
				"program": "${binary}",
				"stopOnEntry": true,
				"MIMode": "lldb",
				"miDebuggerPath": "/usr/bin/lldb"
			}
		},

		"GDB Launch": {
			"adapter": "vscode-cpptools",
			"breakpoints": {
				"exception": {
					"all": "N",
					"uncaught": "Y"
				}
			},
			"configuration": {
				"name": "(gdb) Launch",
				"type": "cppdbg",
				"request": "launch",
				"program": "${binary}",
				"args": [],
				"stopAtEntry": true,
				"cwd": "${workspaceFolder}",
				"environment": [],
				"MIMode": "gdb",
				"miDebuggerPath": "/usr/bin/gdb",
				"setupCommands": [
					{
						"description": "Enable pretty-printing for gdb",
						"text": "-enable-pretty-printing",
						"ignoreFailures": true
					},
					{
						"description": "Auto load symbols when loading an .so file",
						"text": "set auto-solib-add",
						"ignoreFailures": false
					}
				]
			}
		},

		"GDB Attach": {
			"adapter": "vscode-cpptools",
			"breakpoints": {
				"exception": {
					"all": "N",
					"uncaught": "Y"
				}
			},
			"configuration": {
				"request": "attach",
				"program": "${binary}",
				"stopOnEntry": true,
				"MIMode": "gdb",
				"miDebuggerPath": "/usr/bin/gdb",
				"setupCommands": [
					{
						"description": "Enable pretty-printing for gdb",
						"text": "-enable-pretty-printing",
						"ignoreFailures": true
					},
					{
						"description": "Auto load symbols when loading an .so file",
						"text": "set auto-solib-add",
						"ignoreFailures": false
					}
				]
			}
		},

		"Node Launch": {
			"adapter": "vscode-node",
			"breakpoints": {
				"exception": {
					"all": "N",
					"uncaught": "Y"
				}
			},

			"configuration": {
				"request": "launch",
				"protocal": "auto",
				"stopOnEntry": true,
				"console": "integratedTerminal",
				"program": "${file}",
				"cwd": "${workspaceRoot}"
			}
		},

		"Node Attach": {
			"adapter": "vscode-node",
			"breakpoints": {
				"exception": {
					"all": "N",
					"uncaught": "Y"
				}
			},
			"configuration": {
				"name": "Attach to Process",
				"stopOnEntry": true,
				"type": "node",
				"request": "attach",
				"skipFiles": ["<node_internals/**/*.js>"],
				"processId": "${processId}"
			}
		}
	}
}
