{
	"configurations": {
		"foo": {
			"breakpoints": {
				"exception": {
					"all": "N",
					"uncaught": "Y"
				}
			}
		},

		"C++ Launch": {
			"adapter": "vscode-cpptools",
			"configuration": {
				"request": "launch",
				"program": "${binary}",
				"args": [],
				"cwd": "${workspaceFolder}",
				"environment": [],
				"externalConsole": true,
				"MIMode": "lldb"
			}
		},

		"C++ Attach": {
			"adapter": "vscode-cpptools",
			"configuration": {
				"request": "attach",
				"program": "${binary}",
				"MIMode": "lldb"
			}
		},

		"node run": {
			"adapter": "vscode-node",
			"breakpoints": {
				"exception": {
					"all": "N",
					"uncaught": "Y"
				}
			},

			"configuration": {
				"request": "launch",
				"protocal": "auto",
				"stopOnEntry": true,
				"console": "integratedTerminal",
				"program": "${file}",
				"cwd": "${workspaceRoot}"
			}
		},

		"node attach": {
			"adapter": "vscode-node",
			"breakpoints": {
				"exception": {
					"all": "N",
					"uncaught": "Y"
				}
			},
			"configuration": {
				"name": "Attach to Process",
				"type": "node",
				"request": "attach",
				"skipFiles": ["<node_internals/**/*.js>"],
				"processId": "${processId}"
			}
		}
	}
}
